{
    // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
             "*": 0
        }       
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    // Youtube Subscriber Count
    "custom/youtube": {
        "format": "ÔÖß {}",
        "exec": "python ~/private/youtube.py",
        "restart-interval": 600,
        "on-click": "brave https://studio.youtube.com",
        "tooltip": false
    },
    
    // Cliphist
    "custom/cliphist": {
        "format": "ÔÉ™",
        "on-click": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh w",
        "tooltip": false
    },

    // Wallpaper
    "custom/wallpaper": {
        "format": "ÔÄæ",
        "on-click": "~/dotfiles/hypr/scripts/wallpaper.sh select",
        "on-click-right": "~/dotfiles/hypr/scripts/wallpaper.sh",
        "tooltip": false
    },

    // Waybar Themes
    "custom/waybarthemes": {
        "format": "ÔÖÅ",
        "on-click": "~/dotfiles/waybar/themeswitcher.sh",
        "tooltip": false
    },

    // Keybindings
    "custom/keybindings": {
        "format": "ÔÑú",
        "on-click": "~/dotfiles/hypr/scripts/keybindings.sh",
        "tooltip": false
    },

    // Terminal Emulator
    "custom/terminal": {
        "format": "Ôãê",
        "on-click": "ghostty",
        "tooltip": false
    },    

    // Filemanager Launcher
    "custom/filemanager": {
        "format": "ÔÅª",
        "on-click": "thunar",
        "tooltip": false
    },

    // Outlook Launcher
    "custom/outlook": {
        "format": "Óì®",
        "on-click": "brave --app=https://outlook.office.com/mail/",
        "tooltip": false
    },

    // Teams Launcher
    "custom/teams": {
        "format": "Ôäª",
        "on-click": "chromium --app=https://teams.microsoft.com/go",
        "tooltip": false
    },

    // Brave Launcher
    "custom/brave": {
        "format": "Ôãê",
        "on-click": "brave",
        "tooltip": false
    },

    // Browser Launcher
    "custom/browser": {
        "format": "üï∏",
        "on-click": "GTK_THEME= zen-browser",
        "tooltip": false
    },    

    // ChatGPT Launcher
    "custom/chatgpt": {
        "format": "ÔÅô",
        "on-click": "brave --app=https://chat.openai.com",
        "tooltip": false
    },

    // Calculator
    "custom/calculator": {
        "format": "Ôá¨",
        "on-click": "qalculate-gtk",
        "tooltip": false
    },

    // Windows VM
    "custom/windowsvm": {
        "format": "ÔÖ∫",
        "on-click": "~/dotfiles/scripts/launchvm.sh",
        "tooltip": false
    },

    // Rofi Application Launcher
    "custom/appmenu": {
        "format": "Apps",
        "on-click": "rofi -show drun -replace",
        "on-click-right": "~/dotfiles/hypr/scripts/keybindings.sh",
        "tooltip": false
    },
    
    // Power Menu
    "custom/exit": {
        "format": "‚èª",
        "on-click": "wlogout",
        "tooltip": false
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    // System tray
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },

    // Clock
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%I:%M}",
        "format-alt": "{:%Y-%m-%d}"
    },

    // CPU
    "cpu": {
        "format": "/ C {usage}% ",
        "on-click": "ghostty -e btop"
    },

    // Memory
    "memory": {
        "format": "/ M {}% ",
        "on-click": "ghostty -e btop"
    },

    // Harddisc space used
    "disk": {
        "interval": 30,
        "format": "ÔÜ≤   {percentage_used}% ",
        "path": "/",
        "on-click": "ghostty -e btop"
    }, 
    
    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "Ôá´   {signalStrength}%",
        "format-ethernet": "ÔÉÅ {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": "{ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "ghostty -e nmtui"
    },

    // Battery
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}   {capacity}%",
        "format-charging": "Ôóß  {capacity}%",
        "format-plugged": "Ôá¶  {capacity}%",
        "format-alt": "{icon}  {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },

    // Pulseaudio
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "üõá {icon}Ôäî",
        "format-muted": "üõá 0%",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["üï®", "üï© ", "üï™ "]
        },
        "on-click": "killall pavucontrol || pavucontrol --tab=3"
    },

    // Bluetooth
    "bluetooth": {
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "ghostty -e bluetuith"
    },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false,
    }
}
